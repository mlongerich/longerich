<%= link_to "New Article", new_article_path, class: "btn btn-secondary btn-lg", id: "new-article-btn" %>

<br /> <br />

<% @articles.each do |article| %>
  <div class="card mb-4">
    <div class="card-header">
      <h1><%= link_to article.title, article_path(article) %></h3>
    </div>
    <div class="card-body">
      <p><%= truncate(article.body, length: 500) %></p>
    </div>
  </div>
<% end %>
